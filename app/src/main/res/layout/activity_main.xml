<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <!-- first name, last name, birthday, address, email address and phone number. -->

    <TextView
        android:id="@+id/tw_firstname"
        android:textSize="@dimen/textview_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/firstname"/>

    <EditText
        android:id="@+id/editText_firstname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tw_firstname"
        android:layout_toEndOf="@+id/tw_firstname"
        android:textSize="@dimen/editText_size"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="140dp"
        android:hint="@string/firstname_hint"
        app:layout_constraintLeft_toRightOf="@+id/tw_firstname"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="text" />

    <TextView
        android:id="@+id/tw_lastname"
        android:textSize="@dimen/textview_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginVertical="@dimen/textview_vertical"
        android:layout_marginTop="@+id/tw_firstname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tw_firstname"
        android:text="@string/lastname"/>

    <EditText
        android:id="@+id/editText_lastname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/editText_size"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/editText_vertical"
        android:hint="@string/lastname_hint"
        app:layout_constraintLeft_toRightOf="@+id/tw_lastname"
        app:layout_constraintTop_toBottomOf="@+id/editText_firstname"
        android:inputType="text" />

    <TextView
        android:id="@+id/tw_birthday"
        android:textSize="@dimen/textview_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginVertical="@dimen/textview_vertical"
        android:layout_marginTop="@+id/tw_lastname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tw_lastname"
        android:text="@string/birthday"/>

    <EditText
        android:id="@+id/editText_birthday"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/editText_size"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="@dimen/editText_vertical"
        android:hint="@string/birthday_hint"
        app:layout_constraintLeft_toRightOf="@+id/tw_birthday"
        app:layout_constraintTop_toBottomOf="@+id/editText_lastname"
        android:inputType="date" />

    <TextView
        android:id="@+id/tw_address"
        android:textSize="@dimen/textview_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginVertical="@dimen/textview_vertical"
        android:layout_marginTop="@+id/tw_birthday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tw_birthday"
        android:text="@string/address"/>

    <EditText
        android:id="@+id/editText_address"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/editText_size"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="@dimen/editText_vertical"
        android:hint="@string/address_hint"
        app:layout_constraintLeft_toRightOf="@+id/tw_address"
        app:layout_constraintTop_toBottomOf="@+id/editText_birthday"
        android:inputType="text" />

    <TextView
        android:id="@+id/tw_email"
        android:textSize="@dimen/textview_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginVertical="@dimen/textview_vertical"
        android:layout_marginTop="@+id/tw_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tw_address"
        android:text="@string/email"/>

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/editText_size"
        android:layout_marginLeft="58dp"
        android:hint="@string/email_hint"
        android:layout_marginTop="@dimen/editText_vertical"
        app:layout_constraintLeft_toRightOf="@+id/tw_email"
        app:layout_constraintTop_toBottomOf="@+id/editText_address"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/tw_phonenumber"
        android:textSize="@dimen/textview_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginVertical="@dimen/textview_vertical"
        android:layout_marginTop="@+id/tw_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tw_email"
        android:text="@string/phonenumber"/>

    <EditText
        android:id="@+id/editText_phonenumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/editText_size"
        android:layout_marginLeft="51dp"
        android:hint="@string/phonenumber_hint"
        android:layout_marginTop="@dimen/editText_vertical"
        app:layout_constraintLeft_toRightOf="@+id/tw_phonenumber"
        app:layout_constraintTop_toBottomOf="@+id/editText_email"
        android:inputType="phone" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_phonenumber"
        android:backgroundTint="@color/androidGreen"
        android:text="@string/sendbutton"/>

    <ImageView
        android:id="@+id/companyLogoPortrait"
        android:layout_width="150dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>